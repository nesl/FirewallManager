 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/external_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
        android:orientation="vertical" >
        
     	<TextView
			android:id="@+id/fragment_external_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textStyle="bold"
			android:paddingBottom="10dp"
			android:text="List of Registered External Context"
		/>
     	
     	<TextView
			android:id="@+id/fragment_external_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
		/>
     
     	<View
			android:layout_width="fill_parent"
			android:layout_height="3dp"
			android:background="#00000000"
		/>
     	
	    <View
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="#33000000"
		/>
	     
	    <View
			android:layout_width="fill_parent"
			android:layout_height="3dp"
			android:background="#00000000"
		/>
	    
	    <TextView
			android:id="@+id/fragment_external_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:textStyle="bold"
			android:paddingBottom="10dp"
			android:text="Register New External Context"
		/> 
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/fragment_external_texta1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Name of external context:"
		    />
	        
	        <EditText 
	            android:id="@+id/fragment_external_input1"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"	            
	            />
	        
	        <TextView
	            android:id="@+id/fragment_external_texta2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Action of trigger intent:"
		    />
	        
	       	<EditText 
	            android:id="@+id/fragment_external_input2"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"	            
	            />
	     <Button 
     	    android:id="@+id/fragment_external_add"
     	    android:layout_width="fill_parent"
     	    android:layout_height="64dp"
     	    android:text="Add"
     	    />
	    </LinearLayout>
	    

 
</LinearLayout>