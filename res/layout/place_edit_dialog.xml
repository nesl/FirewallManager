<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/place_edit_dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="20dp"
	android:paddingBottom="20dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:orientation="vertical">
	
	<LinearLayout
		android:id="@+id/place_edit_dialog_boolean_group"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:orientation="horizontal">
		
	    <TextView
			android:id="@+id/place_edit_dialog_sensitive_label"
			android:layout_width="0dp"
			android:layout_weight=".50"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textSize="18sp"
			android:textStyle="bold"
		/>

	   	<Spinner
			android:id="@+id/place_edit_dialog_sensitive_spinner"
			android:layout_width="0dp"
			android:layout_weight=".50"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"
			android:entries="@array/sensitive"
		/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/place_edit_dialog_arguments_timing"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="18dp"
		android:orientation="vertical"
	>
		
	    <TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Time Context"
			android:textColor = "#ff0000cc"
		/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="8dp"
			android:text="Apply during following times (24hr format):"
		/>

		<!-- Check boxes {{{ -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		>
			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_sunday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="S"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_monday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="M"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_tuesday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="T"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_wednesday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="W"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_thursday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="Th"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_friday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="F"
				android:checked="true"
			/>

			<CheckBox
				android:id="@+id/place_edit_dialog_arguments_timing_saturday"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="0dp"
				android:text="S"
				android:checked="true"
			/>
		</LinearLayout>

		<!-- }}} -->
		<!-- Times {{{ -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40sp"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="From"
				android:paddingRight="2sp"
			/>

			<EditText
				android:id="@+id/place_edit_dialog_arguments_timing_fromhour"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:editable="true"
				android:hint="@string/hours"
				android:inputType="number"
				android:digits="0123456789"
				android:maxLength="2"
				android:text="0"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/time_separator"
			/>

			<EditText
				android:id="@+id/place_edit_dialog_arguments_timing_fromminutes"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:editable="true"
				android:hint="@string/minutes"
				android:inputType="number"
				android:digits="0123456789"
				android:maxLength="2"
				android:text="00"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="to"
				android:paddingLeft="12sp"
				android:paddingRight="2sp"
			/>

			<EditText
				android:id="@+id/place_edit_dialog_arguments_timing_tohour"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:editable="true"
				android:hint="@string/hours"
				android:inputType="number"
				android:digits="0123456789"
				android:maxLength="2"
				android:text="23"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/time_separator"
			/>

			<EditText
				android:id="@+id/place_edit_dialog_arguments_timing_tominutes"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:editable="true"
				android:hint="@string/minutes"
				android:inputType="number"
				android:digits="0123456789"
				android:maxLength="2"
				android:text="59"
			/>
		</LinearLayout>

		<!-- }}} -->
	</LinearLayout>
	
</LinearLayout>