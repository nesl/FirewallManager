			android:layout_height="wrap_content"
			android:paddingTop="18dp"
			android:orientation="vertical"
			android:visibility="gone"
		>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Apply during following times (24hr format):"
			/>

			<!-- Check boxes {{{ -->

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
			>
				<CheckBox
					android:id="@+id/fragment_app_detail_sensor_action_arguments_timing_sunday"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="2dp"
					android:text="S"
				/>

				<CheckBox
					android:id="@+id/fragment_app_detail_sensor_action_arguments_timing_monday"
