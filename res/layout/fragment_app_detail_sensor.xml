			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:visibility="gone"
		>
			<Spinner
				android:id="@+id/fragment_app_detail_sensor_action_arguments_perturb_distribution"
				android:layout_width="0dp"
				android:layout_weight=".4"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"
				android:entries="@array/fragment_app_detail_sensor_action_arguments_perturb_distributions"
			/>

			<EditText
				android:id="@+id/fragment_app_detail_sensor_action_arguments_perturb_mean"
				android:layout_width="0dp"
				android:layout_weight=".30"
				android:layout_height="match_parent"
				android:visibility="visible"
				android:editable="true"
				android:hint="@string/mean"
				android:inputType="number"
				android:digits="0123456789."
				android:maxLength="@string/constant_max_length"
			/>

			<EditText
				android:id="@+id/fragment_app_detail_sensor_action_arguments_perturb_variance"
				android:layout_width="0dp"
