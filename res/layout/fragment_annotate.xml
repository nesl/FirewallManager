<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	 <RelativeLayout
	        android:id="@+id/map_fragment"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    	
	        <fragment
	          android:id="@+id/map"
	          android:layout_width="match_parent"
	          android:layout_height="200dp"
	          android:name="com.google.android.gms.maps.SupportMapFragment"/>
	        
	        <TextView
	            android:id="@+id/annotate_text"
	            android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/map" 
			    android:layout_marginLeft="20dp"
			    android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#ffcc0000"
			    android:text="Select a trace to annotate places:"/>
	        
<!-- 	      	<View
	      	    android:id="@+id/div1"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:background="#33000000"
				android:layout_below="@+id/annotate_text"  /> -->
	        
	       	<LinearLayout
	       	    android:id="@+id/annotate_select_trace"
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/annotate_text" >
			   	<Spinner
			        android:id="@+id/annotate_choose_trace_spinner"
			        android:layout_width="0dp"
			        android:layout_weight=".70" 
			        android:paddingLeft="3dp"
			        android:layout_height="wrap_content" 
			        android:entries="@array/list_trace" />
			   	<Button
		            android:id="@+id/annotate_choose_trace_button"
		            android:layout_width="0dp"
			        android:layout_weight=".30" 
		            android:layout_height="wrap_content"
		            android:text="Select" />
	       	</LinearLayout>
	       	
	       	<View
	      	    android:id="@+id/div2"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:background="#33000000" 
				android:layout_below="@+id/annotate_select_trace"/>
	      
	        <LinearLayout
	            android:paddingTop="5dp"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/div2" >
			    <TextView
		            android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="20dp"
				    android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#0000ff"
				    android:text="List of place annotated:"/>
		    	<View
					android:layout_width="fill_parent"
					android:layout_height="1dip"
					android:background="#33000000"
				/>
			    <ListView
			        android:id="@+id/loc_list"
			        android:layout_width="fill_parent"
			        android:layout_height="140dp"
			        android:drawSelectorOnTop="false"/>
			    <View
					android:layout_width="fill_parent"
					android:layout_height="1dip"
					android:background="#33000000"
				/>
			</LinearLayout>
	</RelativeLayout>
</ScrollView>
